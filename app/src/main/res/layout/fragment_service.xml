<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ServiceFragment"
    android:background="#FE7A15">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:src="@drawable/background_notify_plus"
        android:layout_marginRight="-96dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lê Thị Thuỷ Tiên"
        android:layout_toRightOf="@+id/cImg"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/rlTreeService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cImg"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/imgTreeService"
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:src="@drawable/tree_services"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_tree"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="33dp"
            android:layout_marginStart="87dp"/>

        <TextView
            android:id="@+id/txtServiceOne"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Dịch vụ đã đăng ký"
            android:textColor="@color/text_bottom_tab"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:background="@drawable/backgroung_item_service"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:paddingStart="30dp"
            android:layout_marginTop="21dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_tree"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="133dp"
            android:layout_marginStart="87dp"/>

        <TextView
            android:id="@+id/txtServiceTwo"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Đăng ký khôi phục điểm danh"
            android:textColor="@color/text_bottom_tab"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:background="@drawable/backgroung_item_service"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:paddingStart="30dp"
            android:layout_marginTop="122dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_tree"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="241dp"
            android:layout_marginStart="87dp"/>

        <TextView
            android:id="@+id/txtServiceThree"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Đăng ký miễn giảm học phần"
            android:textColor="@color/text_bottom_tab"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:background="@drawable/backgroung_item_service"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:paddingStart="30dp"
            android:layout_marginTop="229dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_tree"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="350dp"
            android:layout_marginStart="87dp"/>

        <TextView
            android:id="@+id/txtServiceFour"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Đăng ký thay đổi thông tin"
            android:textColor="@color/text_bottom_tab"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:background="@drawable/backgroung_item_service"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:paddingStart="30dp"
            android:layout_marginTop="338dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_tree"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="458dp"
            android:layout_marginStart="87dp"/>

        <TextView
            android:id="@+id/txtServiceFive"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Đăng ký dịch vụ khác"
            android:textColor="@color/text_bottom_tab"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:background="@drawable/backgroung_item_service"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:paddingStart="30dp"
            android:layout_marginTop="446dp"/>

    </RelativeLayout>



</RelativeLayout>