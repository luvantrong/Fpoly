<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/background_list_service">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_list_service_right">

        <ImageView
            android:id="@+id/imgListService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_slide_1"/>
    </LinearLayout>

   <LinearLayout
       android:layout_alignParentEnd="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="5dp"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:gravity="center"
           android:paddingLeft="100dp">

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/calendar_icon" />

           <TextView
               android:id="@+id/txtDateList"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_medium"
               android:paddingLeft="8dp"
               android:text="02/08/2023"
               android:textColor="@color/primary"
               android:textSize="14sp" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:gravity="center">

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/service_icon" />

           <TextView
               android:id="@+id/txtNameService"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_medium"
               android:paddingLeft="8dp"
               android:text="Miễn giảm học phần"
               android:textColor="@color/text_bottom_tab"
               android:textSize="18sp" />

       </LinearLayout>

       <TextView
           android:id="@+id/txtNameServiceCourse"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_medium"
           android:layout_marginTop="8dp"
           android:text="Giáo dục thể chất \n Vovinam - Vie103"
           android:textColor="@color/text_bottom_tab"
           android:textSize="18sp"
           android:gravity="center"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="48dp"
           android:gravity="center">

           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/list_icon" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_regular"
               android:paddingLeft="4dp"
               android:text="Phòng dvsv cảm ơn bạn!"
               android:textColor="@color/text_hint"
               android:textSize="16sp" />

       </LinearLayout>


   </LinearLayout>



</RelativeLayout>