<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/background_list_service"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp">

    <LinearLayout
        android:id="@+id/lnFile"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/background_list_service_right">

        <ImageView
            android:id="@+id/imgListService"
            android:layout_width="130dp"
            android:layout_height="165dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_slide_1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar_icon" />

        <TextView
            android:id="@+id/txtDateList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="8dp"
            android:text="02/08/2023"
            android:textColor="@color/primary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnNameService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/lnDate"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/service_icon"
            />

        <TextView
            android:id="@+id/txtNameService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Miễn giảm học phần"
            android:textColor="@color/text_bottom_tab"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtNameServiceCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="8dp"
        android:text="Giáo dục thể chất"
        android:textColor="@color/text_bottom_tab"
        android:textSize="16sp"
       android:layout_alignParentLeft="true"
        android:layout_marginLeft="165dp"
        android:layout_below="@+id/lnNameService"/>

    <TextView
        android:id="@+id/txtReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lý do: ABC"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="165dp"
        android:layout_below="@+id/txtNameServiceCourse"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtReason"
        android:layout_marginLeft="160dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/list_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="4dp"
            android:text="Phòng dvsv cảm ơn bạn!"
            android:textColor="@color/text_hint"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>