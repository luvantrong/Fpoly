<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_progress_study"
    android:layout_margin="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgSubjectProgress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/img_progress_study_subject" />

    <TextView
        android:id="@+id/txtNameSubjectProgress"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="Android Networking dgajdj dghjagdhja dgajhdhgj"
        android:textSize="18sp"
        android:maxLines="2"
        android:textColor="@color/text_bottom_tab"
        android:layout_toRightOf="@+id/imgSubjectProgress"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <ProgressBar
        android:id="@+id/ppProgress"
        android:layout_width="230dp"
        android:layout_height="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="70"
        android:indeterminate="false"
        android:layout_toRightOf="@id/imgSubjectProgress"
        android:layout_below="@+id/txtNameSubjectProgress"
        android:progressTint="@color/primary"
        android:progressBackgroundTint="#F3D4BE"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txtPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:textColor="@color/text_bottom_tab"
        android:layout_toRightOf="@id/ppProgress"
        android:layout_marginStart="10dp"
        android:layout_marginTop="72dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <ImageView
        android:id="@+id/btnDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/down_progress_study" />

    <ImageView
        android:id="@+id/btnUp"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/up_progress_study"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/viewPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSubjectProgress"
        android:layout_margin="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/line_progress" />

        <TextView
            android:id="@+id/txtStudyPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Đã học: 8/17 buổi"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_bottom_tab"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/txtProgressPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStudyPlus"
            android:layout_marginStart="5dp"
            android:text="Vắng: 1/17 buổi"
            android:textColor="@color/text_bottom_tab"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:text="Trạng thái: Studying"
            android:textColor="@color/text_bottom_tab"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"/>

    </RelativeLayout>












</RelativeLayout>