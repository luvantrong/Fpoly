<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_subject_stydy"
    android:layout_margin="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtNameSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Networing"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:id="@+id/txtCodeSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOB403"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_below="@+id/txtNameSubject"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"

        />

        <TextView
            android:id="@+id/txtFormStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtCodeSubject"
            android:fontFamily="@font/roboto_medium"
            />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 buá»•i"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtCodeSubject"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"

            />








</RelativeLayout>